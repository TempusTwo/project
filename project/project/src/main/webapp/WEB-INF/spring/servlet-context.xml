		<!-- <beans:property name="mapperLocations" value="classpath:inyeong/*.xml" />  -->
		<beans:property name="mapperLocations"> 
		<beans:array>
           <!--  <beans:value>classpath:org/kdea/board/*.xml</beans:value> -->
